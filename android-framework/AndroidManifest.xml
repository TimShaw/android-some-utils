<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.airshiplay.mobile.android.framework"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />

    <application
        android:name="com.airshiplay.mobile.android.framework.application.FWApplication"
        android:label="@string/app_name" >
        <activity
            android:name="com.airshiplay.mobile.android.framework.MainUI"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.airshiplay.mobile.android.framework.PullToRefreshUI" >
        </activity>

        <receiver android:name="com.airshiplay.mobile.android.framework.receiver.PackageChangeReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.airshiplay.mobile.android.framework.example.viewflow.ScrollViewFlowExample"
            android:label="@string/title_activity_scroll_view_flow_example" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.sliding.SlidingLayoutDemo" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.LauncherActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshExpandableListActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshGridActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshHorizontalScrollViewActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshListActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshListFragmentActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshListInViewPagerActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshScrollViewActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshViewPagerActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshWebView2Activity" />
        <activity android:name="com.airshiplay.mobile.android.framework.example.pulltorefresh.PullToRefreshWebViewActivity" />
        <activity android:name="com.airshiplay.mobile.android.framework.platform.PlatformLoginListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.airshiplay.mobile.android.framework.platform.PlatformLoginActivity" >
        </activity>
    </application>

</manifest>