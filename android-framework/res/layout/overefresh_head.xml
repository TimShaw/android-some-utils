<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffd9e1e7" >

    <RelativeLayout
        android:id="@+id/head_contentlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30.0dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:src="@drawable/overefresh_arrow_down" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12.0dip" >

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8.0dip"
            android:paddingTop="8.0dip" >

            <TextView
                android:id="@+id/tipsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overefresh_pulltorefresh"
                android:textColor="@color/android_gray"
                android:textSize="15.0dip" />

            <TextView
                android:id="@+id/lastUpdatedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overefresh_update"
                android:textColor="@color/android_gray"
                android:textSize="15.0dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>